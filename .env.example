# Environment Configuration for MCPLookup Registry

# Database Configuration
DATABASE_URL=postgresql://mcplookup:your_password@localhost:5432/mcplookup_registry
REDIS_URL=redis://localhost:6379

# Server Configuration  
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# DNS Configuration
DNS_RESOLVER=8.8.8.8
DNS_TIMEOUT_MS=5000
DNS_VERIFICATION_TTL_SECONDS=300

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key
API_KEY_PREFIX=mcp_api_

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000  # 1 hour
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=300000    # 5 minutes
HEALTH_CHECK_TIMEOUT_MS=10000      # 10 seconds
HEALTH_CHECK_CONCURRENCY=10

# Discovery Features
ENABLE_AUTO_DISCOVERY=true
ENABLE_INTENT_MATCHING=true
ENABLE_SMART_RECOMMENDATIONS=true
ENABLE_COMMUNITY_RATINGS=true

# Analytics & Monitoring
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
METRICS_COLLECTION_INTERVAL_MS=60000

# External Services
CLOUDFLARE_API_TOKEN=your-cloudflare-token
GITHUB_TOKEN=your-github-token-for-auto-discovery

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@mcplookup.org

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT_MS=5000

# Cache Configuration  
CACHE_TTL_SECONDS=3600          # 1 hour
CACHE_DISCOVERY_TTL_SECONDS=300 # 5 minutes
CACHE_HEALTH_TTL_SECONDS=60     # 1 minute

# Security Configuration
CORS_ORIGINS=https://mcplookup.org,http://localhost:3000
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# Feature Flags
FEATURE_DNS_AUTO_VERIFICATION=true
FEATURE_CAPABILITY_INFERENCE=true
FEATURE_PERFORMANCE_SCORING=true
FEATURE_SECURITY_SCANNING=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true

# Development Settings
ENABLE_CORS=true
ENABLE_SWAGGER_DOCS=true
MOCK_DNS_VERIFICATION=false
