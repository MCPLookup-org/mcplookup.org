{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    ".next",
    "src/app/**/*",
    "src/components/**/*",
    "src/lib/mcp/bridge.ts"
  ],
  "include": [
    "src/server.ts",
    "src/server-clean.ts",
    "src/lib/**/*",
    "scripts/**/*",
    "auth.ts",
    "middleware.ts"
  ]
}
